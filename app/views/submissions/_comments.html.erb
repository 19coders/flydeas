<% comments.each do |comment| %>
	<div class="comment">
		<%= render partial: 'comment', locals: {comment: comment, parent_comment: parent_comment } %>
		<div class="child_comment" id="new_comment_<%=comment.id%>">
			<%= render partial: 'new_comment', locals: { parent_comment: comment } %>
		</div>
		<% comment_children = Comment.where(parent_comment_id: comment.id) %>
		<% if comment_children.any? %>
			<br>	
			<%= render partial: "comments", locals: { comments: comment_children, parent_comment: comment }%>	
		<% end %>
	</div>
<% end %>
