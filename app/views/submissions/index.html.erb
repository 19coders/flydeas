<p id="notice"><%= notice %></p>

<h1>Flydeas</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @submissions.each do |submission| %>
      <div>
        <div>
          Vote Count |
          <b><%= submission.category%></b> |
          <%= submission.created_at%> 
          <br>     
          <h2><%= submission.title%></h2>
          <br>
          <%= submission.content%>
          <br>
          <%= link_to 'Show', submission %>
          <%= link_to 'Edit', edit_submission_path(submission) %>
          <%= link_to 'Destroy', submission, method: :delete, data: { confirm: 'Are you sure?' } %>
          <%= link_to 'Upvote', new_submission_vote_path(submission.id, +1) %>
          <%= link_to 'Downvote', new_submission_vote_path(submission.id, -1)%>
          <br>
          <p>--------------------------------------------------------------</p>
          <br>

        </div>
      </div>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Submission', new_submission_path %>
